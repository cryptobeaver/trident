{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "hardhat node",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/hardhat",
      "args": ["node"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug current test",
      "stopOnEntry": false,
      "protocol": "inspector",
      "sourceMaps": true,
      "skipFiles": ["node_modules/**/*.js", "<node_internals>/**/*.js"],
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": ["${file}"],
      "outFiles": ["${workspaceRoot}/out/**/*.js"],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
